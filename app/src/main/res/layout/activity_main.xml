<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/sortreeBlue"
    tools:context="com.example.thiago.chatapp.MainActivity">

    <ImageView
        android:layout_width="299dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/whitelogo" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="135dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/emoji_logo3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@color/colorEnergized"
        android:textColor="@android:color/white"
        android:text="@string/sign_up"
        android:textSize="26dp"
        android:id="@+id/btnSignUp"

        android:layout_marginTop="170dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@color/colorAssertive"
        android:textColor="@android:color/white"
        android:text="@string/log_in"
        android:textSize="26dp"
        android:id="@+id/btnLogIn"

        android:layout_marginTop="240dp"
        android:layout_weight="1"/>


</RelativeLayout>
