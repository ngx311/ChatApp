<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/sortreeBlue"
    tools:context="com.example.thiago.chatapp.LogInActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ProgressBar
                android:id="@+id/determinateBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="true"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:minHeight="5dp"
                android:paddingTop="0dp"
                android:layout_centerHorizontal="true"
                android:background="@color/sortreeBlue"
                android:progressBackgroundTint="@color/sortreeBlue"
                android:progressTint="@color/colorEnergized"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="299dp"
                android:layout_height="63dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/whitelogo"
                android:id="@+id/imageView" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/btnForgot"
                android:src="@drawable/emoji_logo3" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_marginTop="50dp"
                android:background="@color/colorAssertive"
                android:textColor="@android:color/white"
                android:text="@string/log_in"
                android:textSize="26dp"
                android:id="@+id/btnLogIn2"
                android:layout_below="@+id/login_input_password"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:inputType="textPersonName"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/login_input_email"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView"
                android:textColorHint="@color/white"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/white" />

            <EditText
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/login_input_password"
                android:layout_below="@+id/login_input_email"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/white"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/white" />

            <CheckBox
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:text="@string/remember_me"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/saveLoginCheckBox"
                android:layout_below="@+id/login_input_password"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="299dp"
                android:layout_height="64dp"
                android:layout_marginTop="1dp"
                android:text="@string/forgot_password"
                android:textColor="@android:color/white"
                android:background="@color/sortreeBlue"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/btnForgot"
                android:layout_below="@+id/btnLogIn2"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>